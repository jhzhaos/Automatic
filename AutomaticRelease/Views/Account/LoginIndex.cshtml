@{
    ViewBag.Title = "会员登陆";
}
<script>
    function url(msg) {
        if (msg) {
            window.location = "/home/index";
        }
    }
    function load() {
        $("#sbut").button('loading');
    }
</script>
<div style="padding: 10px 10px 10px;">
    @using (Ajax.BeginForm(new AjaxOptions { Url = Url.Action("LoginIn") ,OnComplete= "url",OnBegin= "load" }))
    {
        <fieldset>
            <legend>注册</legend>

            <div class="form-group">
                <label for="username" class="col-sm-1 control-label">用户名</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="username" name="username"
                           placeholder="请输入用户名" data-val="true" data-val-required="用户名不能为空！">
                    <span data-valmsg-for="username" data-valmsg-replace="true" class="text-warning"></span>
                </div>
            </div><br /><br />
            <div class="form-group">
                <label for="password" class="col-sm-1 control-label">密码</label>
                <div class="col-sm-10">
                    <input type="password" id="password" name="password" class="form-control"
                           placeholder="请输入密码" data-val="true" data-val-required="密码不能为空！">
                    <span data-valmsg-for="password" data-valmsg-replace="true" class="text-warning"></span>
                </div>
            </div><br /><br />
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary btn-lg active" id="sbut">登陆</button>
                </div>
            </div>
        </fieldset>
    }
</div>

